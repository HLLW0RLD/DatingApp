<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="255dp"
    card_view:cardCornerRadius="10dp"
    android:layout_margin="@dimen/small_default_margin">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/placeholderM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M"
        android:textSize="100dp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/placeholderF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F"
        android:textSize="100dp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/has_more_photos"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="@dimen/default_margin"
        android:src="@drawable/ic_baseline_local_see_24"
        android:visibility="gone"
        android:layout_gravity="bottom|end"/>

    <ImageView
        android:id="@+id/show_id"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="@dimen/default_margin"
        android:layout_gravity="start|top"
        android:src="@drawable/ic_baseline_error_24"/>

    <ProgressBar
        android:background="#00FFFFFF"
        android:id="@+id/cardLoadingLayout"
        style="?android:attr/progressBarStyleLarge"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    </FrameLayout>
</androidx.cardview.widget.CardView>